@model IEnumerable<SiteYonetimProje.Identity.ApplicationUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Yonetici.cshtml";
}
<div class="row" style="display: inline-block;">
    <div class="tile_count">
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Site Sakinleri</span>
            <div class="count">25</div>

        </div>
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-clock-o"></i> Average Time</span>
            <div class="count">123.50</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>3% </i> From last Week</span>
        </div>
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Males</span>
            <div class="count green">2,500</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>
        </div>
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Females</span>
            <div class="count">4,567</div>
            <span class="count_bottom"><i class="red"><i class="fa fa-sort-desc"></i>12% </i> From last Week</span>
        </div>
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Collections</span>
            <div class="count">2,315</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>
        </div>
        <div class="col-md-2 col-sm-4  tile_stats_count">
            <span class="count_top"><i class="fa fa-user"></i> Total Connections</span>
            <div class="count">7,325</div>
            <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> From last Week</span>
        </div>
    </div>
</div>

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        @if (TempData["daireyeMesajBasarili"] != null)
        {
            <h2 class="alert alert-success" id="successMessage">@TempData["daireyeMesajBasarili"]</h2>
        }
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Yönetici Atama İşlemi<small>Yöneticisi bulunmayan apartmana yönetici atama</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">


                                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Ad</th>
                                            <th>Soyad</th>
                                            <th>Cinsiyet</th>
                                            <th>Doğum Tarihi</th>
                                            <th>Daire Numarası</th>
                                            <th>Telefon Numarası</th>
                                            <th>Daireye Mesaj</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>

                                                <td>@item.Ad</td>
                                                <td>@item.Soyad</td>

                                                @if (item.Cinsiyet == 1)
                                                {
                                                    <td>Erkek</td>
                                                }
                                                else
                                                {
                                                    <td>Kadın</td>
                                                }
                                                <td>@item.DogumTarihi</td>
                                                <td>@item.DaireNo</td>
                                                <td>@item.PhoneNumber</td>
                                                <td>@Html.ActionLink("Yaz", "DaireyeMesaj", "Yonetici", new { id = item.Id }, new { @class = "btn btn-success" })</td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>





                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>






