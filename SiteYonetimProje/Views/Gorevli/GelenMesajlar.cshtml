@model IEnumerable<SiteYonetimProje.Models.ApartmanModel.MesajIslemleri>

@{
    ViewBag.Title = "GelenMesajlar";
    Layout = "~/Views/Shared/_Gorevli.cshtml";
}

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Görevliye Gelen Mesajlar<small>Yöneticiye Görevliye mesajlar</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">


                                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            @if (ViewBag.TemizlikKontrol != null)
                                            {
                                                <th>Mesaj</th>
                                                <th>Apartman Numarası</th>
                                                <th>Daire Numarası</th>
                                                <th>Mesaj Türü</th>
                                            }
                                            else
                                            {
                                                <th>Mesaj</th>
                                                <th>Mesaj Türü</th>
                                            }

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.TemizlikKontrol != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                if (item.MesajTuru == 20 || item.MesajTuru == 21 || item.MesajTuru == 22)
                                                {
                                                    <tr>

                                                        <td>@item.Mesaj</td>
                                                        <td>@item.ApartmanNo</td>
                                                        <td>@item.Gonderen_DaireNo</td>
                                                        <td>Yöneticiden Gelen</td>
                                                    </tr>
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td>@item.Mesaj</td>
                                                        <td>@item.ApartmanNo</td>
                                                        <td>@item.Gonderen_DaireNo</td>
                                                        <td>Apartman Sakininden Gelen</td>
                                                    </tr>
                                                }

                                            }
                                        }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td> @item.Mesaj </td>
                                                    @if (item.MesajTuru == 20 || item.MesajTuru == 21 || item.MesajTuru == 22)
                                                    {
                                                        <td> Yöneticiden gelenler </td>
                                                    }
                                                    else
                                                    {
                                                        <td> Apartman Sakinlerinden Gelenler</td>
                                                    }
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

