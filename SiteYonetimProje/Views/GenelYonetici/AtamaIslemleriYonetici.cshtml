@model IEnumerable<SiteYonetimProje.Identity.ApplicationUser>
@{
    ViewBag.Title = "AtamaIslemleri";
    Layout = "~/Views/Shared/_GenelYonetici.cshtml";
}

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Yönetici Atama İşlemi<small>Yöneticisi bulunmayan apartmana yönetici atama</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                @using (Html.BeginForm("AtamaIslemleriYonetici", "GenelYonetici", new { apartmanId = ViewBag.ApartmanId}, FormMethod.Post))
                                {
                                    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>Ad</th>
                                                <th>Soyad</th>
                                                <th>Doğum Tarihi</th>
                                                <th>Yönetici Atama</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Ad</td>
                                                    <td>@item.Soyad</td>
                                                    <td>@item.DogumTarihi</td>
                                                    <td><button id="onay" type="submit" name="id" value="@item.Id" class="btn btn-success">Yönetici ata</button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
