@model IEnumerable<SiteYonetimProje.Models.ApartmanModel.MesajIslemleri>
@{
    ViewBag.Title = "Sikayetlerim";
    Layout = "~/Views/Shared/_Home.cshtml";
}

<div class="">
    <div class="clearfix"></div>
    <div class="row">
        @if (TempData["onayIslemiBasarili"] != null)
        {
            <h2 class="alert alert-success" id="successMessage">@TempData["onayIslemiBasarili"]</h2>
        }
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Oluşturduğum Şikayetler<small></small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">


                                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Mesaj</th>
                                            <th>Şikayet oluşturulan alan</th>
                                            <th>Durum</th>


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Mesaj</td>
                                                @if (item.MesajTuru == 10)
                                                {
                                                    <td>Temizlik Görevlisi</td>
                                                }
                                                @if (item.MesajTuru == 11)
                                                {
                                                    <td>Havuz Bakım Alanı</td>
                                                }
                                                @if (item.MesajTuru == 12)
                                                {
                                                    <td>Spor Salonu alanı</td>
                                                }


                                                @if (item.OkunduDurum == 0)
                                                {
                                                    <td><button name="id" class="btn btn-warning" disabled>Süreç Aktif</button></td>

                                                }
                                                else
                                                {
                                                    <td><button name="id" class="btn btn-success" disabled>Süreç Tamamlandı</button></td>

                                                }

                                            </tr>
                                        }

                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

